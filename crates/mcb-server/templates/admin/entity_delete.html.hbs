{{#*inline "page"}}
<div class="breadcrumb">
    <a href="/ui/entities">Entities</a>
    <span class="separator">/</span>
    <a href="/ui/entities/{{entity_slug}}">{{entity_slug}}</a>
    <span class="separator">/</span>
    <a href="/ui/entities/{{entity_slug}}/{{entity_id}}">{{truncate_id entity_id}}</a>
    <span class="separator">/</span>
    <span>Delete</span>
</div>

<div class="mb-8">
    <h1 class="text-3xl font-bold text-primary">{{title}}</h1>
    <p class="mt-2 text-secondary">Group: {{{status_badge entity_group}}}</p>
</div>

<div class="card" style="max-width: 40rem;">
    <div class="text-center py-4">
        <div style="font-size: 3rem; margin-bottom: 1rem;">&#9888;&#65039;</div>
        <h2 class="text-xl font-semibold mb-2">Confirm Deletion</h2>
        <p class="text-secondary mb-4">
            Are you sure you want to delete record <strong title="{{entity_id}}">{{truncate_id entity_id 12}}</strong>?
            This action cannot be undone.
        </p>
    </div>

    {{#if has_record}}
    <div style="border: 1px solid var(--border-color, #e5e7eb); border-radius: 0.375rem; padding: 1rem; margin-bottom: 1.5rem; background: var(--bg-secondary, #f9fafb);">
        <p class="text-xs uppercase tracking-wider text-secondary mb-2">Record preview</p>
        <dl>
            {{#each fields}}
            {{#unless readonly}}
            <div class="flex py-1" style="font-size: 0.875rem;">
                <dt class="w-1/3 text-secondary">{{label}}</dt>
                <dd class="w-2/3">
                    {{#if is_select}}
                        {{{status_badge (lookup ../record name)}}}
                    {{else}}
                        {{#if (lookup ../record name)}}
                            {{truncate_text (lookup ../record name) 60}}
                        {{else}}
                            <span style="color: var(--text-muted);">&mdash;</span>
                        {{/if}}
                    {{/if}}
                </dd>
            </div>
            {{/unless}}
            {{/each}}
        </dl>
    </div>
    {{/if}}

    <div class="flex gap-3 justify-center">
        <form method="post" action="/ui/entities/{{entity_slug}}/{{entity_id}}/delete">
            <button class="btn btn-danger" type="submit">Delete Permanently</button>
        </form>
        <a class="btn btn-secondary" href="/ui/entities/{{entity_slug}}/{{entity_id}}">Cancel</a>
    </div>
</div>
{{/inline}}
{{> admin/layout}}
