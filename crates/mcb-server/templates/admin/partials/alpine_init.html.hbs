<script>
document.addEventListener('alpine:init', () => {
    Alpine.store('admin', {
        toasts: [],
        addToast(message, type) {
            const id = Date.now();
            this.toasts.push({ id, message, type: type || 'info' });
            setTimeout(() => {
                this.toasts = this.toasts.filter(t => t.id !== id);
            }, 4000);
        }
    });
});
</script>
