{{#*inline "head_extra"}}
    <style>
        .progress-bar { background: var(--bg-tertiary, #e5e7eb); border-radius: 9999px; height: 0.5rem; overflow: hidden; }
        .progress-fill { background: var(--accent, #2563eb); height: 100%; transition: width 0.3s ease; }
        .operation-card { border: 1px solid var(--border-color, #e5e7eb); border-radius: 0.5rem; padding: 1rem; margin-bottom: 1rem; }
        .operation-card:last-child { margin-bottom: 0; }
        .status-badge { display: inline-flex; align-items: center; padding: 0.25rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 500; }
        .status-active { background: rgba(59,130,246,0.15); color: var(--accent, #2563eb); }
        .status-idle { background: var(--bg-tertiary, #e5e7eb); color: var(--text-primary, #374151); }
        .file-path { font-family: monospace; font-size: 0.875rem; color: var(--text-muted, #6b7280); overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }
    </style>
{{/inline}}

{{#*inline "page"}}
<div class="mb-8 flex justify-between items-center">
    <div>
        <h1 class="text-3xl font-bold">Jobs</h1>
        <p class="mt-2 text-secondary">Monitor Indexing and background jobs and operations</p>
    </div>
    <button class="btn btn-secondary" onclick="loadJobs()">Refresh</button>
</div>

<div id="jobs-content">
    <div class="card animate-pulse">
        <div class="h-6 rounded w-1/3 mb-4" style="background: var(--bg-tertiary)"></div>
        <div class="h-32 rounded" style="background: var(--bg-tertiary)"></div>
    </div>
</div>
{{/inline}}

{{#*inline "page_scripts"}}
<script>
    var jobsTimer = null;

    async function loadJobs() {
        try {
            var resp = await adminFetch('/jobs');
            if (!resp.ok) throw new Error('HTTP ' + resp.status);
            renderJobs(await resp.json());
        } catch(e) {
            document.getElementById('jobs-content').innerHTML = '<div class="card"><p class="text-center py-8 text-secondary">Error loading jobs: ' + escapeHtml(e.message) + '</p></div>';
        }
    }

    function renderJobs(data) {
        var jobs = toArraySafe(data && data.jobs);
        var running = toIntegerSafe(data && data.running, 0);
        var queued = toIntegerSafe(data && data.queued, 0);
        var total = toIntegerSafe(data && data.total, jobs.length);
        var hasActive = running > 0 || queued > 0;
        var html = '<div class="card mb-6"><div class="flex items-center justify-between"><div>' +
            '<h2 class="text-lg font-semibold">Jobs Summary</h2>' +
            '<p class="text-secondary">' + total + ' total &middot; ' + running + ' running &middot; ' + queued + ' queued</p>' +
            '</div><span class="status-badge ' + (hasActive ? 'status-active' : 'status-idle') + '">' +
            (hasActive ? 'ACTIVE' : 'IDLE') + '</span></div></div>';

        if (jobs.length > 0) {
            html += '<div class="card"><h2 class="text-lg font-semibold mb-4">Jobs</h2>';
            jobs.forEach(function(job) {
                var pct = toIntegerSafe(job.progress_percent, 0);
                var processed = toIntegerSafe(job.processed_items, 0);
                var totalItems = toIntegerSafe(job.total_items, 0);
                var statusCls = job.status === 'Running' ? 'status-active' : 'status-idle';
                var startedText = job.started_at ? new Date(job.started_at).toLocaleString() : 'Pending';
                html += '<div class="operation-card">' +
                    '<div class="flex justify-between items-start mb-2"><div>' +
                    '<h3 class="font-medium">' + escapeHtml(job.label||'') + '</h3>' +
                    '<p class="text-sm text-secondary">ID: ' + escapeHtml(String(job.id||'').substring(0,12)) +
                    ' &middot; Type: ' + escapeHtml(job.job_type||'') + '</p></div>' +
                    '<span class="status-badge ' + statusCls + '">' + escapeHtml(job.status||'') + '</span></div>' +
                    '<div class="progress-bar mb-2"><div class="progress-fill" style="width:' + pct + '%"></div></div>' +
                    '<div class="flex justify-between text-sm text-secondary">' +
                    '<span>' + processed + ' / ' + totalItems + ' items</span>' +
                    '<span class="file-path" title="' + escapeHtml((job.current_item||'N/A').toString()) + '">' +
                    escapeHtml((job.current_item||'Waiting...').toString()) + '</span></div>' +
                    '<p class="text-xs text-secondary mt-2" style="opacity:0.7">Started: ' + startedText + '</p></div>';
            });
            html += '</div>';
        } else {
            html += '<div class="card"><div class="text-center py-8">' +
                '<svg class="mx-auto h-12 w-12 text-muted" fill="none" viewBox="0 0 24 24" stroke="currentColor">' +
                '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />' +
                '</svg><h3 class="mt-2 text-sm font-medium">No active jobs</h3>' +
                '<p class="mt-1 text-sm text-secondary">Jobs will appear here when indexing or other operations start.</p>' +
                '</div></div>';
        }
        document.getElementById('jobs-content').innerHTML = html;
    }

    document.addEventListener('DOMContentLoaded', function() { loadJobs(); jobsTimer = setInterval(loadJobs, 2000); });
</script>
{{/inline}}

